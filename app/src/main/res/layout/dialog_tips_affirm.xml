<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:layoutDirection="locale">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:background="@drawable/dialog_round_bg_shape">

        <TextView
            android:id="@+id/tv_tipdialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:text="提示"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/tv_tipdialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:textColor="@color/text_black_gray"
            android:textSize="@dimen/textsize_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <include layout="@layout/layout_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_dialog_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_botton_round_l_sl"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/text_black_gray"
                    android:textSize="@dimen/textsize_normal" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#dfdfdf" />

                <TextView
                    android:id="@+id/btn_dialog_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_botton_round_r_sl"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/text_cyan"
                    android:textSize="@dimen/textsize_normal" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>